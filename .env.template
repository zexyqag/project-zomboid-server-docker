# Example .env for Project Zomboid server container
# Only the variables below are supported. All server INI options should be set using INIVARS_*.

# Required for first run
ADMINPASSWORD=ChangeMePlease
# ADMINPASSWORD_FILE=/run/secrets/pz_admin_password

# Optional: server password
# PASSWORD=MyServerPassword
# PASSWORD_FILE=/run/secrets/pz_server_password

# Optional: RCON password
# RCONPASSWORD=MyRconPassword
# RCONPASSWORD_FILE=/run/secrets/pz_rcon_password

# Example: set any INI option (see servertest.ini for keys)
# INIVARS_Public=true
# INIVARS_PublicName="My Server"
# INIVARS_ServerOptions__SomeOption=Value

# Example: SandboxVars overrides
# SANDBOXVARS_ZombieLore_Transmission=4
# SANDBOXVARS_ZombieLore_Mortality=3

# Other supported variables
LANG=en_EN.UTF-8
STEAMAPPBRANCH=unstable
MEMORY=2048m
WORKSHOP_IDS=
MOD_IDS=
STEAM_API_KEY=
CLEAN_WORKSHOP=False
CLEAN_WORKSHOP_DRY_RUN=False
CLEAN_WORKSHOP_ALLOW_REMOVE_ALL=False
CLEAN_WORKSHOP_KEEP_FILE=
INIVARS_CTRL_DRY_RUN=False
INIVARS_CTRL_STRICT=False
SANDBOXVARS_CTRL_DRY_RUN=False
SANDBOXVARS_CTRL_STRICT=False
SANDBOXVARS_CTRL_CASE_SENSITIVE=False
MAP_SCAN_VERBOSE=False
MAP_SCAN_DRY_RUN=False
